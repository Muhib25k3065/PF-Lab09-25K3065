#include <stdio.h>

int academic(int arr[], int size);
int main()
{
	int subjects[3];
	int result = academic(subjects,3);
	if(result >= 50)
	{
		printf("PASS");
	}	else if(result == 0)
	{
		return 0;
	}	else	{
		printf("Fail: Average must be 50 or higher.");
	}

	return 0;
}

int academic (int arr[], int size)
{
	int i;
	int sum = 0;
	int avg;
	int result;
	
	for(i = 0; i < size; i++)
	{
		printf("Enter marks (0-100) for subject %d: ", i+1);
		scanf("%d", &arr[i]);
	}
	
	for(i = 0; i < size; i++)
	{
		if(arr[i] < 40)
		{
			printf("FAIL: No single subject can be below 40.");
			return 0;
		}
		sum = sum + arr[i];
	}
	
	avg = sum/size;
	
	return avg;
	
}
